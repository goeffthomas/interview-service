{
	"compilerOptions": {
		"allowSyntheticDefaultImports": true,
		"checkJs": false,
		"allowJs": false,
		"declaration": true,
		"esModuleInterop": true,
		"importHelpers": true,
		"lib": ["esnext", "dom"],
		"module": "commonjs",
		"moduleResolution": "node",
		"noEmit": false,
		"noImplicitReturns": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"outDir": "./dist",
		"preserveConstEnums": true,
		"removeComments": false,
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"sourceMap": true,
		"target": "es2017"
	},
	"include": [
		"src"
	],
	"exclude": [
		"node_modules",
		"dist",
		"*.js"
	]
}